{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2022",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "strictPropertyInitialization": false,
        "paths": {
            "src/*": ["src/*"]
        }
    }
}
